<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:orientation="vertical">

    <com.mak.newword.widget.SwipeMenuLayout
        android:id="@+id/swipemenu_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="79dp">

            <LinearLayout
                android:id="@+id/content_ll"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/word_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="poem"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/word_mean_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="n.诗；韵文；诗一样的作品；富有诗意的东西" />
            </LinearLayout>

            <ImageView
                android:id="@+id/finish_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_finish"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_tv"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:background="@color/color_lan"
                android:gravity="center"
                android:text="编辑"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/delete_tv"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:background="#FF3B30"
                android:gravity="center"
                android:text="删除"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>
    </com.mak.newword.widget.SwipeMenuLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5" />
</LinearLayout>
